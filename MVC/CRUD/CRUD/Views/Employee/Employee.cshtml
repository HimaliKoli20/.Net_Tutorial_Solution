@model CRUD.Models.Employee
@{
    ViewBag.Title = "Employee";
}

<h2>Fill the employee details</h2>

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>CRUD Operation</title>
        <style>
            .error{
                color : red;
            }
        </style>
    </head>
    <body>
        @using (Html.BeginForm("Add", "Employee", FormMethod.Post))
        {
            <div class="container">
                <div class="form-group">
                    @Html.HiddenFor(x => x.EmpID)
                    <label>Full Name*</label>
                    @Html.ValidationMessageFor(x => x.FullName, "" , new { @class = "error"})
                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-group" })
                </div>
            </div>
            <div class="container">
                <div class="form-group">
                    <label>Email ID*</label>
                    @Html.ValidationMessageFor(x => x.EmailID, "", new { @class = "error" }) 
                    @Html.TextBoxFor(x => x.EmailID, new { @class = "form-group" })
                </div>
            </div>
            <div class="container">
                <div class="form-group">
                    <label>Office Location</label>
                    @Html.TextBoxFor(x => x.OfficeLocation , new { @class = "form-group" })
                </div>
            </div>
            <div class="container">
                <div class="form-group">
                    <label>Department</label>
                    @Html.TextBoxFor(x => x.Department , new { @class = "form-group" })
                </div>
            </div>

            <div>
                <button type="submit" value="submit" class="btn btn-primary">Submit</button>
                <button type="reset" value="clear" class="btn btn-primary">Cancel</button>
            </div>
         }
    </body>
</html>
