
@{
    ViewBag.Title = "RegistrationForm";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>RegistrationForm</title>
</head>
<body>
    <div>
        <form action="RegistrationForm/Verify" method="post">
            <div class="card-deck">
                <div class="row">
                    <div class="card">
                        <div class="card-header" style="text-align:center">
                            <h4 class="text-info">Personal Details</h4><br />
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4 col-md-12">
                                    <label for="First Name">First name:</label><br />
                                    <input id="Text1" class="form-control" type="text" name="FirstName" placeholder="First Name" required="required" />
                                </div>
                                <div class="col-lg-4 col-md-12">
                                    <label for="Last Name">Last Name:</label><br />
                                    <input id="Text1" class="form-control" type="text" name="LastName" placeholder="Last Name" required="required" />
                                </div>
                                <div class="col-lg-4 form-group">
                                    <label for="Email">Email:</label><br />
                                    <input id="Text1" class="form-control" type="text" name="Email" placeholder="something@anything.com" required="required" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-md-12 form-group">
                                    <label for="Phone Number">Phone Number:</label><br />
                                    <input id="Text1"  class="form-control" type="text" name="PhoneNumber" placeholder="+91 " required="required" />
                                </div>
                                <div class="col-lg-4 col-md-12 form-group">
                                    <label for="DOB">DOB:</label><br />
                                    <input id="Text1"  class="form-control" type="text" name="DOB" placeholder="YYYY-MM-DD" />
                                </div>
                                <div class="col-lg-4 col-md-12">
                                    <label>Gender:</label><br />
                                    
                                    <label><input type="radio" name="gender" value="Male" /> Male</label><br>
                                    
                                    <label><input type="radio" name="gender" value="Female" /> Female</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="card">
                        <div class="card-header" style="text-align:center">
                            <h4 class="text-info">Educational Details</h4><br />
                        </div>
                        <div class="card-body">
                            <div class="col-lg-4 col-md-12">
                                <label for="Qualification">Qualification:</label><br />
                                <input id="Radio1" type="radio" name="Qualification" value="BE" />
                                <label for="BE">BE</label><br>
                                <input id="Radio1" type="radio" name="Qualification" value="BTech" />
                                <label for="Btech">BTech</label><br>
                                <input id="Radio1" type="radio" name="Qualification" value="MTech" />
                                <label for="MTech">Mtech</label><br>
                            </div>
                            <div class="col-lg-4 col-md-12">
                                <label for="Branch">Branch:</label><br />
                                <input id="Radio1" type="radio" name="Branch" value="Computer" />
                                <label for="Computer">Computer</label><br>
                                <input id="Radio1" type="radio" name="Branch" value="Extc" />
                                <label for="Extc">Extc</label><br>
                            </div>
                            <div class="col-lg-4 col-md-12">
                                <label for="yop">Year Of Passing:</label><br />
                                <select name="YearOfPassing" id="yop" class="form-control">
                                    <option value="SelectYear">Select Year</option>
                                    <option value="2016">2016</option>
                                    <option value="2017">2017</option>
                                    <option value="2018">2018</option>
                                    <option value="2019">2019</option>
                                    <option value="2020">2020</option>
                                    <option value="2021">2021</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="card">
                        <div class="card-header" style="text-align:center">
                            <h4 class="text-info">Other Details</h4><br />
                        </div>
                        <div class="card-body">
                            <div class="col-lg-4 col-md-12">
                                <label for="CurrentEmploymentStatus">Current Employment Status:</label><br />
                                <input id="Radio1" type="radio" name="CurrentEmploymentStatus" value="Intern" />
                                <label for="Intern">Intern</label><br>
                                <input id="Radio1" type="radio" name="CurrentEmploymentStatus" value="Employed" />
                                <label for="Employed">Employed</label><br>
                                <input id="Radio1" type="radio" name="CurrentEmploymentStatus" value="Unemployed" />
                                <label for="Unemployed">Unemployed</label><br>
                            </div>
                            <div class="col-lg-4 col-md-12">
                                <label>Interested Job Profiles:</label><br />
                                <input type="checkbox" id="Checkbox1" name="InterestedJobProfiles" value="Web Developer">
                                <label>Web Developer</label><br>

                                <input type="checkbox" id="Checkbox1" name="InterestedJobProfiles" value="Android App Dev">
                                <label> Android App Developer</label><br>

                                <input type="checkbox" id="Checkbox1" name="InterestedJobProfiles" value="IOS">
                                <label> IOS Developer</label><br>

                                <input type="checkbox" id="Checkbox1" name="InterestedJobProfiles" value="Network Eng">
                                <label> Network Engineer</label><br>

                                <input type="checkbox" id="Checkbox1" name="InterestedJobProfiles" value="Tester">
                                <label> Tester</label><br>
                            </div>
                            <div class="col-lg-4 col-md-12 form-group">
                                <label for="TotalWorkExperience">Total Work Experience:</label><br />
                                <input id="Text1" class="form-control" type="text" name="TotalWorkExperience" placeholder="Total Work Experience" />
                            </div>
                        </div>
                    </div>
                </div>
                <input id="Submit1" class="btn btn-outline-dark" type="submit" value="Submit" />
            </div>
        </form>
    </div>
</body>
</html>

